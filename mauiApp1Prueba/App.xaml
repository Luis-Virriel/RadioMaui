<?xml version="1.0" encoding="UTF-8" ?>
<Application x:Class="mauiApp1Prueba.App"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:mauiApp1Prueba.Converters"
             xmlns:local="clr-namespace:mauiApp1Prueba">

    <Application.Resources>
        <ResourceDictionary>

            <!-- 🔄 CONVERTERS GLOBALES -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters:BoolToEyeIconConverter x:Key="BoolToEyeIconConverter" />
            <converters:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
            <converters:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter" />

            <!-- 🎬 CONVERTERS PARA CINE -->
            <converters:DoubleToVisibilityConverter x:Key="DoubleToVisibilityConverter" />
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
            <converters:CollectionToVisibilityConverter x:Key="CollectionToVisibilityConverter" />

            <!-- 🎨 COLORES DEL TEMA -->
            <Color x:Key="Primary">#0f3460</Color>
            <Color x:Key="Secondary">#e94560</Color>
            <Color x:Key="Accent">#533483</Color>
            <Color x:Key="Background">#1a1a2e</Color>
            <Color x:Key="Surface">#16213e</Color>
            <Color x:Key="OnPrimary">#ffffff</Color>
            <Color x:Key="OnSecondary">#ffffff</Color>
            <Color x:Key="OnBackground">#eeeeee</Color>
            <Color x:Key="OnSurface">#cccccc</Color>

            <!-- 🖋️ COLORES DE TEXTO -->
            <Color x:Key="TextPrimary">#ffffff</Color>
            <Color x:Key="TextSecondary">#cccccc</Color>
            <Color x:Key="TextTertiary">#888888</Color>
            <Color x:Key="TextDisabled">#666666</Color>
            <Color x:Key="TextLight">#e0e0e0</Color>
            <Color x:Key="TextDark">#333333</Color>
            <Color x:Key="TextMuted">#999999</Color>
            <Color x:Key="TextOnPrimary">#ffffff</Color>
            <Color x:Key="TextOnSecondary">#ffffff</Color>
            <Color x:Key="TextOnSurface">#ffffff</Color>
            <Color x:Key="TextOnBackground">#ffffff</Color>
            <Color x:Key="TextOnCard">#ffffff</Color>

            <!-- 🃏 COLORES DE SUPERFICIE -->
            <Color x:Key="SurfaceCard">#1e2749</Color>
            <Color x:Key="SurfaceDialog">#2a3556</Color>
            <Color x:Key="SurfaceElevated">#243052</Color>
            <Color x:Key="CardBackground">#1e2749</Color>
            <Color x:Key="ButtonBackground">#16213e</Color>

            <!-- 🎯 COLORES DE ESTADO -->
            <Color x:Key="Success">#4caf50</Color>
            <Color x:Key="Warning">#ff9800</Color>
            <Color x:Key="Error">#f44336</Color>
            <Color x:Key="Info">#2196f3</Color>

            <!-- 🌈 PALETA DE GRISES -->
            <Color x:Key="Gray100">#f5f5f5</Color>
            <Color x:Key="Gray200">#eeeeee</Color>
            <Color x:Key="Gray300">#e0e0e0</Color>
            <Color x:Key="Gray400">#bdbdbd</Color>
            <Color x:Key="Gray500">#9e9e9e</Color>
            <Color x:Key="Gray600">#757575</Color>
            <Color x:Key="Gray700">#616161</Color>
            <Color x:Key="Gray800">#424242</Color>
            <Color x:Key="Gray900">#212121</Color>

            <!-- 🔘 COLORES BÁSICOS -->
            <Color x:Key="White">#ffffff</Color>
            <Color x:Key="Black">#000000</Color>
            <Color x:Key="Transparent">Transparent</Color>

            <!-- 🌈 GRADIENTES -->
            <LinearGradientBrush x:Key="CoolBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0.0" />
                <GradientStop Color="#16213e" Offset="0.5" />
                <GradientStop Color="#0f3460" Offset="1.0" />
            </LinearGradientBrush>

            <!-- 🎨 GRADIENTES ADICIONALES -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f3460" Offset="0.0" />
                <GradientStop Color="#533483" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e94560" Offset="0.0" />
                <GradientStop Color="#ff6b83" Offset="1.0" />
            </LinearGradientBrush>

            <!-- 🖌️ BRUSHES SÓLIDOS -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
            <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}" />
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
            <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
            <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
            <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

            <!-- 🎯 ESTILOS GLOBALES -->
            <Style TargetType="Shell" ApplyToDerivedTypes="True">
                <Setter Property="FlyoutBackgroundColor" Value="{StaticResource Surface}" />
                <Setter Property="TabBarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TabBarForegroundColor" Value="{StaticResource OnPrimary}" />
                <Setter Property="TabBarTitleColor" Value="{StaticResource OnPrimary}" />
                <Setter Property="TabBarUnselectedColor" Value="#80ffffff" />
            </Style>

            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
            </Style>

            <!-- 🔘 ESTILOS PARA BOTONES -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="TextColor" Value="{StaticResource OnPrimary}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                <Setter Property="TextColor" Value="{StaticResource OnSecondary}" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="16,8" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="AccentButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
                <Setter Property="TextColor" Value="{StaticResource OnSecondary}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="20,10" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>

</Application>