<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mauiApp1Prueba.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:root="clr-namespace:mauiApp1Prueba"
    xmlns:views="clr-namespace:mauiApp1Prueba.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="mauiApp1Prueba">

    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent ContentTemplate="{DataTemplate root:MainPage}" Route="main" />
    </FlyoutItem>

    <FlyoutItem Title="Noticias" Icon="news_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaginaNoticias}" Route="PaginaNoticias" />
    </FlyoutItem>

    <FlyoutItem Title="Cine" Icon="cine_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaginaCine}" Route="PaginaCine" />
    </FlyoutItem>

    <FlyoutItem Title="Clima" Icon="clima_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaginaClima}" Route="PaginaClima" />
    </FlyoutItem>

    <FlyoutItem Title="Cotizaciones" Icon="cotizaciones_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaginaCotizaciones}" Route="PaginaCotizaciones" />
    </FlyoutItem>

    <FlyoutItem Title="Patrocinadores" Icon="patrocinadores_icon.png">
        <ShellContent Route="patrocinadores" />
    </FlyoutItem>

    <FlyoutItem Title="Preferencias" Icon="settings_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:PaginaPreferencias}" Route="PaginaPreferencias" />
    </FlyoutItem>

</Shell>