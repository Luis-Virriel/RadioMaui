<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="mauiApp1Prueba.Views.EditUserPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Editar Perfil">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Mi Perfil" 
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Photo Section -->
            <StackLayout HorizontalOptions="Center">

                <Frame BackgroundColor="LightGray"
                       CornerRadius="75"
                       HeightRequest="150"
                       WidthRequest="150"
                       HasShadow="True"
                       Padding="0">

                    <Image x:Name="ProfileImage"
                           Source="user_placeholder.png"
                           Aspect="AspectFill"/>

                </Frame>

                <Button Text="Cambiar Foto"
                        Clicked="OnChangePhotoClicked"
                        BackgroundColor="DodgerBlue"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="0,10,0,0"/>

                <Button Text="Eliminar Foto"
                        Clicked="OnRemovePhotoClicked"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"/>

            </StackLayout>

            <!-- Form -->
            <StackLayout Spacing="15">

                <Label Text="Nombre completo" FontAttributes="Bold"/>
                <Entry x:Name="NameEntry" 
                       Placeholder="Ingresa tu nombre"/>

                <Label Text="Correo electrÃ³nico" FontAttributes="Bold"/>
                <Entry x:Name="EmailEntry" 
                       Placeholder="correo@ejemplo.com"
                       Keyboard="Email"/>

            </StackLayout>

            <!-- Buttons -->
            <StackLayout Spacing="10" Margin="0,20,0,0">

                <Button Text="Guardar"
                        Clicked="OnSaveClicked"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"/>

                <Button Text="Cancelar"
                        Clicked="OnCancelClicked"
                        BackgroundColor="Gray"
                        TextColor="White"
                        CornerRadius="10"/>

            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>