<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiApp1Prueba.Views.PaginaClima"
             Title="Clima en Punta del Este"
             BackgroundColor="#0F172A">

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20">

            <!-- Header con gradiente -->
            <Frame Grid.Row="0" 
                   Padding="25,30" 
                   Margin="0,0,0,20"
                   CornerRadius="20"
                   HasShadow="True"
                   BackgroundColor="#1E3A8A">

                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1E3A8A" Offset="0" />
                        <GradientStop Color="#3B82F6" Offset="0.5" />
                        <GradientStop Color="#60A5FA" Offset="1" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Label x:Name="LblLocation" 
                           FontSize="24" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="15">
                        <Image x:Name="ImgIcon" 
                               HeightRequest="80" 
                               WidthRequest="80" 
                               VerticalOptions="Center" />

                        <VerticalStackLayout Spacing="5">
                            <Label x:Name="LblTemp" 
                                   FontSize="56" 
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label x:Name="LblDesc" 
                                   FontSize="18" 
                                   TextColor="#E0F2FE"
                                   HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Pronóstico -->
            <VerticalStackLayout Grid.Row="1" Spacing="20">

                <!-- Título del pronóstico -->
                <Frame Padding="20,15" 
                       CornerRadius="15"
                       BackgroundColor="#1E40AF"
                       HasShadow="True">
                    <Label Text="Pronóstico para los próximos días" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />
                </Frame>

                <!-- Cards de pronóstico centradas -->
                <Frame Padding="10" 
                       CornerRadius="15" 
                       BackgroundColor="Transparent"
                       HorizontalOptions="Center">

                    <CollectionView x:Name="ForecastCollection" 
                                  ItemsLayout="HorizontalList" 
                                  HeightRequest="200"
                                  HorizontalOptions="Center">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15" 
                                       Margin="8" 
                                       CornerRadius="18" 
                                       HasShadow="True" 
                                       WidthRequest="140"
                                       BackgroundColor="#B3D9FF"
                                       BorderColor="#3B82F6"
                                       HorizontalOptions="Center">

                                    <Frame.Shadow>
                                        <Shadow Brush="#1E40AF" 
                                                Offset="0,4" 
                                                Radius="8" 
                                                Opacity="0.3" />
                                    </Frame.Shadow>

                                    <VerticalStackLayout HorizontalOptions="Center" Spacing="12">

                                        <!-- Fecha -->
                                        <Frame Padding="8,4" 
                                               CornerRadius="12"
                                               BackgroundColor="#EFF6FF"
                                               BorderColor="#3B82F6"
                                               HorizontalOptions="Center">
                                            <Label Text="{Binding Date}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="#1E40AF"
                                                   HorizontalOptions="Center" />
                                        </Frame>

                                        <!-- Icono del clima -->
                                        <Frame Padding="8" 
                                               CornerRadius="25"
                                               BackgroundColor="#F0F9FF"
                                               WidthRequest="70"
                                               HeightRequest="70"
                                               HorizontalOptions="Center">
                                            <Image Source="{Binding IconUrl}" 
                                                   HeightRequest="50" 
                                                   WidthRequest="50"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                        </Frame>

                                        <!-- Temperatura -->
                                        <Label Text="{Binding TempDisplay}" 
                                               FontSize="20" 
                                               FontAttributes="Bold"
                                               TextColor="#1E40AF"
                                               HorizontalOptions="Center" />

                                        <!-- Descripción -->
                                        <Label Text="{Binding Description}" 
                                               FontSize="12" 
                                               TextColor="#64748B"
                                               HorizontalOptions="Center"
                                               HorizontalTextAlignment="Center" />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>

                <!-- Información adicional -->
                <Frame Padding="20" 
                       CornerRadius="15"
                       BackgroundColor="#0F172A"
                       BorderColor="#1E40AF"
                       HasShadow="True">

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Información del clima" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#60A5FA"
                               HorizontalOptions="Center" />

                        <BoxView HeightRequest="2" 
                                 Color="#3B82F6" 
                                 CornerRadius="1"
                                 Margin="0,5" />

                        <Label Text="Datos actualizados cada hora" 
                               FontSize="14" 
                               TextColor="#94A3B8"
                               HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>