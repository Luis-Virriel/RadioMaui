<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiApp1Prueba.Views.PaginaPreferencias"
             BackgroundColor="#1E293B">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- Header Section -->
            <Frame BackgroundColor="#1E3A8A" 
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">
                <Label Text="Seleccioná qué páginas querés ver"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </Frame>

            <!-- Options Container -->
            <Frame BackgroundColor="#2D3748" 
                   CornerRadius="15"
                   Padding="20"
                   HasShadow="True">
                <VerticalStackLayout Spacing="18">

                    <!-- Noticias -->
                    <Frame BackgroundColor="#334155" 
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="15">
                            <CheckBox x:Name="NoticiasCheck" 
                                      Color="#60A5FA"
                                      VerticalOptions="Center" />
                            <Label Text="📰 Noticias" 
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Cine -->
                    <Frame BackgroundColor="#334155" 
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="15">
                            <CheckBox x:Name="CineCheck" 
                                      Color="#60A5FA"
                                      VerticalOptions="Center" />
                            <Label Text="🎬 Cine" 
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Clima -->
                    <Frame BackgroundColor="#334155" 
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="15">
                            <CheckBox x:Name="ClimaCheck" 
                                      Color="#60A5FA"
                                      VerticalOptions="Center" />
                            <Label Text="🌤️ Clima" 
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Cotizaciones -->
                    <Frame BackgroundColor="#334155" 
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="15">
                            <CheckBox x:Name="CotizacionesCheck" 
                                      Color="#60A5FA"
                                      VerticalOptions="Center" />
                            <Label Text="💰 Cotizaciones" 
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Patrocinadores -->
                    <Frame BackgroundColor="#334155" 
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="False">
                        <HorizontalStackLayout Spacing="15">
                            <CheckBox x:Name="PatrocinadoresCheck" 
                                      Color="#60A5FA"
                                      VerticalOptions="Center" />
                            <Label Text="🤝 Patrocinadores" 
                                   FontSize="18"
                                   TextColor="White"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="Guardar Preferencias"
                    Clicked="OnGuardarClicked"
                    BackgroundColor="#60A5FA"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="15"
                    HeightRequest="55"
                    Margin="0,10,0,0"
                     />

            <!-- Info Footer -->
            <Label Text="Tus preferencias se guardarán automáticamente"
                   FontSize="14"
                   TextColor="#94A3B8"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>