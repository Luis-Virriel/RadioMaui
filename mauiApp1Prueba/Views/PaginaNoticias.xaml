<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:mauiApp1Prueba.ViewModels"
             x:Class="mauiApp1Prueba.Views.PaginaNoticias"
             x:Name="RootPage"
             BackgroundColor="#1E293B">

    <ContentPage.BindingContext>
        <viewmodels:NewsViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra de búsqueda -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <SearchBar Grid.Column="0"
                       Placeholder="Buscar noticias..."
                       Text="{Binding Keyword}"
                       SearchCommand="{Binding SearchCommand}"
                       HorizontalOptions="FillAndExpand"
                       BackgroundColor="White"
                       HeightRequest="40"
                       Margin="0,0,5,0"
                       />

            <Button Grid.Column="1"
                    Text="➡️"
                    Command="{Binding SearchCommand}"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    
                    WidthRequest="80"/>
        </Grid>

        <!-- Grilla de noticias -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Items}"
                            RemainingItemsThreshold="3"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}"
                            ItemsLayout="VerticalGrid, 2"  
                Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White"
                                Stroke="#E0E0E0"
                                StrokeThickness="1"
                                Padding="10"
                                Margin="5"
                               >
                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <!-- Imagen proporcional -->
                                <Image Source="{Binding ImageUrl}"
                                       Aspect="AspectFill"
                                       HeightRequest="120"
                                       BackgroundColor="#D8D8D8"
                                       Margin="0,0,0,10"
                                       />
                                <!-- Título -->
                                <Label Text="{Binding Title}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#222222"
                                       LineBreakMode="WordWrap"
                                       MaxLines="2"
                                       Grid.Row="1"/>
                                <!-- Fuente y fecha -->
                                <StackLayout Grid.Row="2" Orientation="Horizontal" Margin="0,5,0,0">
                                    <Label Text="{Binding SourceId}" FontSize="10" TextColor="#007ACC"/>
                                    <Label Text=" • " FontSize="10" TextColor="#999999"/>
                                    <Label Text="{Binding PubDateParsed, StringFormat='{0:dd/MM/yyyy}'}" FontSize="10" TextColor="#999999"/>
                                </StackLayout>

                                <!-- Tap para abrir noticia -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding BindingContext.OpenArticleCommand, Source={x:Reference RootPage}}" 
                                        CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Footer cargando más -->
                <CollectionView.Footer>
                    <StackLayout IsVisible="{Binding IsBusy}" Padding="20" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#007ACC"/>
                        <Label Text="Cargando más noticias..." HorizontalOptions="Center" TextColor="#999999"/>
                    </StackLayout>
                </CollectionView.Footer>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
