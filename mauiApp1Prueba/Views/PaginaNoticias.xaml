<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiApp1Prueba.Views.PaginaNoticias"
             Title="Noticias">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackLayout Grid.Row="0" Padding="15" BackgroundColor="LightGray">
            <Entry Placeholder="Buscar noticias..." 
                   Text="{Binding Keyword}" 
                   ReturnCommand="{Binding LoadCommand}" />

            <Picker Title="Categoría" 
                    ItemsSource="{Binding Categories}" 
                    SelectedItem="{Binding SelectedCategory}"
                    SelectedIndexChanged="OnCategoryChanged" />
        </StackLayout>

        <!-- Lista de noticias con scroll infinito -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding Items}"
                           RemainingItemsThreshold="3"
                           RemainingItemsThresholdReachedCommand="{Binding LoadMoreCommand}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="White" 
                                Stroke="LightGray" 
                                >
                            <Grid Padding="15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Título -->
                                <Label Grid.Row="0" 
                                       Text="{Binding title}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="Black"
                                       LineBreakMode="WordWrap" />

                                <!-- Descripción -->
                                <Label Grid.Row="1" 
                                       Text="{Binding description}" 
                                       FontSize="14" 
                                       TextColor="Gray"
                                       LineBreakMode="WordWrap"
                                       MaxLines="3"
                                       Margin="0,5,0,0" />

                                <!-- Fuente y fecha -->
                                <StackLayout Grid.Row="2" 
                                            Orientation="Horizontal" 
                                            Margin="0,5,0,0">
                                    <Label Text="{Binding source_name}" 
                                           FontSize="12" 
                                           TextColor="Blue" />
                                    <Label Text=" • " 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                    <Label Text="{Binding pubDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                </StackLayout>

                                <!-- Tap gesture para abrir artículo -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenArticleCommand}" 
                                                         CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Footer con indicador de carga -->
                <CollectionView.Footer>
                    <StackLayout IsVisible="{Binding IsBusy}" 
                                Padding="20" 
                                HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                          Color="Blue" />
                        <Label Text="Cargando más noticias..." 
                               HorizontalOptions="Center" 
                               TextColor="Gray" />
                    </StackLayout>
                </CollectionView.Footer>

            </CollectionView>
        </RefreshView>

        <!-- Indicador de carga inicial -->
        <StackLayout Grid.Row="1" 
                     IsVisible="{Binding IsBusy}" 
                     HorizontalOptions="Center" 
                     VerticalOptions="Center">
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                              Color="Blue" 
                              Scale="1.5" />
            <Label Text="Cargando noticias..." 
                   HorizontalOptions="Center" 
                   TextColor="Gray" 
                   Margin="0,10,0,0" />
        </StackLayout>

    </Grid>
</ContentPage>