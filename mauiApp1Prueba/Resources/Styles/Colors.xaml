<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Paleta de colores azules con lindos contrastes -->

    <!-- Azules principales -->
    <Color x:Key="Primary">#1E40AF</Color>
    <!-- Azul principal vibrante -->
    <Color x:Key="PrimaryDark">#1E3A8A</Color>
    <!-- Azul más oscuro para hover -->
    <Color x:Key="PrimaryLight">#3B82F6</Color>
    <!-- Azul claro para acentos -->

    <!-- Azules secundarios -->
    <Color x:Key="Secondary">#0EA5E9</Color>
    <!-- Azul cielo -->
    <Color x:Key="SecondaryLight">#38BDF8</Color>
    <!-- Azul cielo claro -->
    <Color x:Key="SecondaryDark">#0284C7</Color>
    <!-- Azul cielo oscuro -->

    <!-- Azul terciario -->
    <Color x:Key="Tertiary">#0F172A</Color>
    <!-- Azul marino muy oscuro -->

    <!-- Colores básicos -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Grises fríos (con tinte azul) -->
    <Color x:Key="Gray100">#F1F5F9</Color>
    <!-- Gris muy claro frío -->
    <Color x:Key="Gray200">#E2E8F0</Color>
    <!-- Gris claro frío -->
    <Color x:Key="Gray300">#CBD5E1</Color>
    <!-- Gris medio frío -->
    <Color x:Key="Gray400">#94A3B8</Color>
    <!-- Gris medio oscuro frío -->
    <Color x:Key="Gray500">#64748B</Color>
    <!-- Gris oscuro frío -->
    <Color x:Key="Gray600">#475569</Color>
    <!-- Gris muy oscuro frío -->
    <Color x:Key="Gray900">#1E293B</Color>
    <!-- Gris casi negro frío -->
    <Color x:Key="Gray950">#0F172A</Color>
    <!-- Negro frío -->

    <!-- Colores adicionales que necesita CreateUserPage -->
    <!-- Extra claro -->
    <Color x:Key="CoolGray200">#E2E8F0</Color>
    <!-- Para bordes -->
    <Color x:Key="CoolGray300">#CBD5E1</Color>
    <!-- Para separadores -->

    <!-- Colores de estado con buen contraste -->
    <Color x:Key="Success">#10B981</Color>
    <!-- Verde éxito -->
    <Color x:Key="Warning">#F59E0B</Color>
    <!-- Amarillo advertencia -->
    <Color x:Key="Error">#EF4444</Color>
    <!-- Rojo error -->
    <Color x:Key="Info">#3B82F6</Color>
    <!-- Azul información -->

    <!-- Colores de texto optimizados -->
    <Color x:Key="TextPrimary">#0F172A</Color>
    <!-- Texto principal (negro azulado) -->
    <Color x:Key="TextSecondary">#475569</Color>
    <!-- Texto secundario (gris azulado) -->
    <Color x:Key="TextLight">#94A3B8</Color>
    <!-- Texto claro (gris claro azulado) -->
    <Color x:Key="TextOnPrimary">#FFFFFF</Color>
    <!-- Texto sobre fondo azul -->
    <Color x:Key="TextOnDark">#F1F5F9</Color>
    <!-- Texto sobre fondo oscuro -->

    <!-- Colores de superficie -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <!-- Superficie principal -->
    <!-- Superficie variante -->
    <Color x:Key="SurfaceCard">#FFFFFF</Color>
    <!-- Superficie para cards -->
    <Color x:Key="SurfaceDark">#0F172A</Color>
    <!-- Superficie oscura -->

    <!-- Colores adicionales para mantener compatibilidad -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <!-- Texto sobre primary dark -->
    <Color x:Key="SecondaryDarkText">#0F172A</Color>
    <!-- Texto sobre secondary -->
    <Color x:Key="Magenta">#EC4899</Color>
    <!-- Magenta más suave -->
    <Color x:Key="MidnightBlue">#1E293B</Color>
    <!-- Azul medianoche -->
    <Color x:Key="OffBlack">#1E293B</Color>
    <!-- Negro con tinte azul -->

    <!-- Pinceles (Brushes) -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLight}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDark}"/>

    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>

    <!-- Pinceles adicionales -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimary}"/>

    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="SurfaceCardBrush" Color="{StaticResource SurfaceCard}"/>

    <!-- Gradientes hermosos -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Secondary}" Offset="0.0" />
        <GradientStop Color="{StaticResource SecondaryDark}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CoolBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource Gray100}" Offset="0.0" />
        <GradientStop Color="{StaticResource Gray200}" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>